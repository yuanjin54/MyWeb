#set($layout="layout/contentLayout.vm")
<div style="padding: 0 5%;padding-bottom: 55px;">
    <input id="nowPage" type="hidden"/>
    <input id="pageNum" type="hidden"/>
    <div style="padding-top: 20px;padding-left: 10px;">
        <h4 style="display: inline;"><span style="color: red">*</span>标题: </h4>
        <input style="height: 30px;width: 80%;border: 2px solid #ccc;border-radius: 6px;padding-left: 4px;font-size: 14px;"
               type="text" id="title" name="title" placeholder="请输入文章标题"/>
    </div>
    <h4 style="padding-left: 10px"><span style="color: red">*</span>内容:</h4>
    <textarea class="textarea" id="content_id" placeholder="请输入待抽取的文章的内容..."></textarea>
    <button id="submit" class="btn btn-bt-no" style="margin-top: 10px;color: white;" onclick="getMassageList()">提交
    </button>
    <h4 style="padding-left: 10px">摘要自动抽取结果:</h4>
    <textarea class="textarea" id="massageList" placeholder="结果展示" readonly></textarea>
    <div id="page"></div>
</div>
#parse("monitor/wait-model.vm")
<style type="text/css">
    .input-border-main {
        height: 37px;
        font-size: 16px;
        padding: 10px;
        border-radius: 5px;
        border: double;
        border-color: darkgreen;
        width: 160px;
    }

    .clearfix {
        display: block;
        border-bottom: solid 1px #ddd;
        margin-bottom: 10px;
    }

    .news-date {
        text-align: center;
        display: inline-block;
        float: left;
        width: 4rem;
        height: 4rem;
        background: #f2f2f2;
    }

    .news-date1 {
        text-align: center;
        color: #666666;
        font-size: 1.5625rem;
        padding-top: 30%;
    }

    .news-bodys {
        display: list-item;
        padding: 0 0.875rem;
        overflow: hidden;
    }

    .username {
        font-size: 21px;
        margin-right: 10px;
        color: blue;
    }

    .verb {
        font-size: 18px;
        color: brown;
    }

    .centence {
        text-indent: 2em;
        text-align: justify;
        font-size: 16px;
        color: #999;
    }

    #page {
        margin: 20px auto;
        color: #666;
        display: block;
        text-align: center;
    }

    #page ul {
        padding-left: 0px;
    }

    #page li {
        display: inline-block;
        min-width: 30px;
        height: 28px;
        cursor: pointer;
        color: #666;
        font-size: 13px;
        line-height: 28px;
        background-color: #f9f9f9;
        border: 1px solid #dce0e0;
        text-align: center;
        margin: 0 4px;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
    }

    .xl-nextPage,
    .xl-prevPage {
        width: 60px;
        color: #0073A9;
        height: 28px;
    }

    #page li.xl-disabled {
        opacity: .5;
        cursor: no-drop;
    }

    #page li.xl-active {
        background-color: #0073A9;
        border-color: #0073A9;
        color: #FFF
    }

    .textarea {
        padding: 8px;
        width: 100%;
        height: 200px;
        border: solid 2px #ddd;
        border-radius: 8px;
        background: snow;
        font-size: 14px;
    }

    .btn-bt {
        background: silver;
        pointer-events: none;
    }

    .btn-bt-no {
        background: royalblue;

    }
</style>
<script>
    function getMassageList() {
        var param = [];
        var title = $("#title").val();
        var content = $("#content_id").val();
        if (title == undefined || title == null || title.trim() == "") {
            bootbox.alert('请输入标题');
            return;
        }
        if (content == undefined || content == null || content.trim() == "") {
            bootbox.alert('请输入正确的内容');
            return;
        }
        $("#submit").attr("disabled", "disabled");
        $("#submit").removeClass("btn-bt-no");
        $("#submit").addClass("btn-bt");
        $("#loadingModal").modal('show');
        $.ajax({
            type: "POST",
            async: false,
            dataType: "json",
            url: basePath + "/monitor/abstract?_time=" + new Date().getTime(),
            data: {content: content, title: title},
            success: function (res) {
                $('#loadingModal').modal('hide');
                if (res.code == 1) {
                    console.log(res.code)
                    $('#massageList').val(res.data.abstractText);//显示详情页面
                } else {
                    bootbox.alert(res.msg);
                }
                $("#submit").removeAttr("disabled");
                $("#submit").removeClass("btn-bt");
                $("#submit").addClass("btn-bt-no");
            }
        });
    }
</script>